@model LastTask1.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/LoginRegister.css" rel="stylesheet" />
<form class="h-100" style="height: 100vh" method="post">

    <div id="wrapper" class="wrapper bg-white d-flex flex-column align-items-center justify-content-start h-75 w-75" style="margin: 12.5%; margin-top: 50px; box-shadow:0px 1px 10px 5px rgba(0,0,0,0.33);
													  -webkit-box-shadow:0px 1px 10px 5px rgba(0,0,0,0.33);
													  -moz-box-shadow:0px 1px 10px 5px rgba(0,0,0,0.33);">
        <h1 class="mt-5 text-center">Login</h1>
        <div class="md-form w-75 mt-0">
            <i class="fas fa-user prefix"></i>
            <input asp-for="UserName" type="text" id="inputIconEx2" class="form-control" placeholder="Type your username">
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="md-form w-75">
            <i class="fas fa-lock prefix"></i>
            <input asp-for="Password" required type="password" id="inputValidationEx2" class="form-control validate" placeholder="Type your password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="custom-control custom-checkbox mr-sm-2 w-75 text-left">
            <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="customControlAutosizing">
            <label class="custom-control-label" for="customControlAutosizing">Remember me</label>
        </div>
        

        <div asp-validation-summary="ModelOnly" class="note note-danger"></div>
        <input id="signup" type="submit" asp-controller="Account" asp-action="Login" class="btn btn-success btn-rounded w-25 mb-5 mt-5" value="Login" />
    </div>
</form>

