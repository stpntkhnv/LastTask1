@model LastTask1.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/LoginRegister.css" rel="stylesheet" />
<form class="h-100" style="height: 100vh" method="post">
    
    <div id="wrapper" class="wrapper bg-white d-flex flex-column align-items-center justify-content-start h-75 w-75" style="margin: 12.5%; margin-top: 50px; y">
        <h1 class="mt-5 text-center">Register new account</h1>
        <div class="md-form mb-0 w-75">
            <i class="fas fa-envelope prefix"></i>
            <input asp-for="Email" required type="email" id="inputValidationEx" class="form-control validate" placeholder="Input your e-mail">
            <span asp-validation-for="Email" ></span>
        </div>
        <div class="md-form w-75 mt-0">
            <i class="fas fa-user prefix"></i>
            <input name="userName" type="text" id="inputIconEx2" class="form-control" placeholder="Type your username">
        </div>
        <div class="md-form w-75">
            <i class="fas fa-lock prefix"></i>
            <input asp-for="Password" required type="password" id="inputValidationEx2" class="form-control validate" placeholder="Type your password">
            <span asp-validation-for="Password" ></span>
        </div>
        <div class="md-form w-75">
            <i class="fas fa-lock prefix"></i>
            <input asp-for="PasswordConfirm" required type="password" id="inputValidationEx2" class="form-control validate" placeholder="ConfirmPassword">
            <span asp-validation-for="PasswordConfirm" ></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="note note-danger"></div>
        <input id="signup" type="submit" asp-controller="Account" asp-action="Register" class="btn btn-success btn-rounded w-25" value="Register" />
    </div>
</form>