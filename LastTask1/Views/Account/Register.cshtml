@model LastTask1.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    @@media (max-width: 570px)
    {
        .container-fluid{
            padding: 0 !important;
            margin-left: 0 !important;
            margin-right: 0 !important;
        }
        #size, #size1{
            width: 100% !important;
            padding: 0 !important;
            margin: 0 !important;
        }
   
    }
</style>
<link href="~/css/LoginRegister.css" rel="stylesheet" />
<div id="size1" class="container d-flex justify-content-center"  style="background:#c0eb75;">
    <form id="size" class="w-75 shadow bg-white d-flex flex-column align-items-center" asp-controller="Account" asp-action="Register">
        <h1 class="mt-5 text-center">@Localizer["RegisterNew"]</h1>
        <div class="md-form mb-0 w-75">
            <i class="fas fa-envelope prefix"></i>
            <input asp-for="Email" required type="email" id="inputValidationEx" class="form-control validate" placeholder="@Localizer["Email"]">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="md-form mt-3 w-75">
            <i class="fas fa-user prefix"></i>
            <input name="userName" type="text" id="inputIconEx2" class="form-control" placeholder="@Localizer["Name"]">
        </div>
        <div class="md-form mb-0 w-75">
            <i class="fas fa-lock prefix"></i>
            <input asp-for="Password" required type="password" id="inputValidationEx2" class="form-control validate" placeholder="@Localizer["Password"]">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="md-form mt-2 w-75">
            <i class="fas fa-lock prefix"></i>
            <input asp-for="PasswordConfirm" required type="password" id="inputValidationEx2" class="form-control validate" placeholder="@Localizer["Confirm"]">
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <input id="signup" type="submit"  class="btn btn-success btn-rounded" value="@Localizer["Register"]" />
    </form>
</div>
